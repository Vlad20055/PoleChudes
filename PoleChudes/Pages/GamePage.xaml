<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PoleChudes.ViewModels"
             xmlns:cv="clr-namespace:PoleChudes.ContentViews"
             x:Class="PoleChudes.GamePage"
             Title="GamePage">

    <AbsoluteLayout>
        <VerticalStackLayout
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All">

            <!-- AnswerPanel -->
            <cv:AnswerPanel
                x:Name="AnswerUnits"/>



            <HorizontalStackLayout
                Padding="20"
                Spacing="30"
                VerticalOptions="Center">

                <!-- Players -->
                <cv:PlayersPanel
                    x:Name="PlayersPanel"/>



                <!-- Baraban with button and arrow -->
                <cv:BarabanPanel
                    x:Name="BarabanPanel"/>

                <!-- Game question -->
                <cv:QuestionPanel
                    x:Name="QuestionPanel"/>

            </HorizontalStackLayout>


            <HorizontalStackLayout>
                <!-- LettersPanel -->
                <cv:LettersPanel
                    x:Name="LettersPanel"/>

                <!-- Presenter -->
                <cv:PresenterPanel
                    x:Name="PresenterBox"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>

        <!-- Панель ключа поверх всего остального -->
        <cv:KeyPanel
            x:Name="KeyPanel"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" />

        <!-- Панель плюса поверх всего остального -->
        <cv:PlusPanel
            x:Name="PlusPanel"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" />

        <!-- Панель приза поверх всего остального -->
        <cv:PrizePanel
            x:Name="PrizePanel"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All" />

    </AbsoluteLayout>
</ContentPage>
