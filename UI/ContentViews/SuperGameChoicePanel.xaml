<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UI.ViewModels"
             x:Class="UI.ContentViews.SuperGameChoicePanel"
             x:DataType="vm:SuperGameChoicePanelViewModel"
             BackgroundColor="#80000000"
             IsVisible="{Binding IsVisible}">

    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="20" >

        <Label
            Text="{Binding Description}"
            FontSize="20"
            TextColor="White"
            HorizontalOptions="Center"/>

        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="20">
            <Button
                x:Name="SuperGameButton"
                Text="{Binding SuperGameText}"
                WidthRequest="60"
                FontSize="20"
                Clicked="SuperGameButton_Clicked" />

            <Button
                x:Name="RefuseButton"
                Text="{Binding RefuseText}"
                WidthRequest="60"
                FontSize="20"
                Clicked="RefuseButton_Clicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentView>
