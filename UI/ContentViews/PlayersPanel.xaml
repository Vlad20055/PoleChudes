<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UI.ViewModels"
             x:Class="UI.ContentViews.PlayersPanel"
             HeightRequest="150"
             WidthRequest="250">
    
    <Grid
        x:DataType="vm:PlayersViewModel"
        RowSpacing="8"
        ColumnSpacing="16"
        VerticalOptions="Center">

        <!-- Определяем строки: 1 заголовок + 3 игрока -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Три столбца: имена, очки, текст -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Игроки"
            FontAttributes="Bold"
            FontSize="20" />

        <!-- Игрок 1 -->
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Text="{Binding Name1}"
            TextColor="Black"
            FontAttributes="Bold"
            BackgroundColor="{Binding CurrentPlayer1, Converter={StaticResource BoolToColorConverter}}" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Score1, StringFormat='{}{0}'}" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Text="{Binding Message1}" />

        <!-- Игрок 2 -->
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Text="{Binding Name2}"
            TextColor="Black"
            FontAttributes="Bold"
            BackgroundColor="{Binding CurrentPlayer2, Converter={StaticResource BoolToColorConverter}}" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Score2, StringFormat='{}{0}'}" />
        <Label
            Grid.Row="2"
            Grid.Column="2"
            Text="{Binding Message2}" />

        <!-- Игрок -->
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Text="{Binding Name}"
            TextColor="Black"
            FontAttributes="Bold"
            BackgroundColor="{Binding CurrentPlayer, Converter={StaticResource BoolToColorConverter}}" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding Score, StringFormat='{}{0}'}"
            FontAttributes="Bold" />
        <Label
            Grid.Row="3"
            Grid.Column="2"
            Text="{Binding Message}" />
    </Grid>
</ContentView>
