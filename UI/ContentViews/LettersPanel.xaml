<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UI.ViewModels"
             x:Class="UI.ContentViews.LettersPanel">

    <VerticalStackLayout
        Padding="20"
        Spacing="20">

        <!-- Панель букв: 11 столбцов, автоматом 3 строки при 33 буквах -->
        <CollectionView
            x:DataType="vm:LettersPanelViewModel"
            ItemsSource="{Binding Units}"
            SelectionMode="None"
            WidthRequest="540"
            HeightRequest="150">
            <!-- 3 строки * (30+spacing) -->

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="11" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:LetterUnitViewModel">
                    <Button
                        Text="{Binding Letter}"
                        BackgroundColor="{Binding Color}"
                        IsEnabled="{Binding Enabled}"
                        TextColor="Black"
                        WidthRequest="30"
                        HeightRequest="30"
                        CornerRadius="4"
                        Margin="2" 
                        Clicked="Letter_Clicked"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
