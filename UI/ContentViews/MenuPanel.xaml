<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UI.ViewModels"
             x:Class="UI.ContentViews.MenuPanel"
             x:DataType="vm:MenuPanelViewModel"
             IsVisible="{Binding IsVisible}" >

    <VerticalStackLayout>
        <Button
            x:Name="WordButton"
            IsVisible="{Binding IsWordButtonVisible}"
            Text="Назвать слово"
            Clicked="WordButton_Clicked"
            HorizontalOptions="Center"
            WidthRequest="200"
            HeightRequest="60" />
            
        
        <Button
            x:Name="RotateButton"
            IsVisible="{Binding IsRotateButtonVisible}"
            Text="Крутить барабан"
            Clicked="RotateButton_Clicked"
            HorizontalOptions="Center"
            WidthRequest="200"
            HeightRequest="60"/>
    </VerticalStackLayout>
    
    
    
</ContentView>
